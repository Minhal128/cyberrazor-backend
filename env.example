# CyberRazor Environment Configuration
# Copy this file to .env and update with your actual values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./cyberrazor.db
# For PostgreSQL: postgresql://user:password@localhost/cyberrazor

# API Configuration
API_KEY=your-api-key-here-change-this
BACKEND_URL=https://cyberrazor-backend.vercel.app

# Wazuh SIEM Integration
WAZUH_URL=https://cyberrazor-backend.vercel.app
WAZUH_USERNAME=wazuh
WAZUH_PASSWORD=wazuh

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=https://cyberrazor-backend.vercel.app

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cyberrazor.log

# Security Settings
SSL_VERIFY=false
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900 